{
  "name": "sigemech-root",
  "version": "1.0.0",
  "description": "Orquestador de arranque centralizado para SIGEMECH",
  "main": "index.js",
  "scripts": {
    "instalar-todo": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run dev-backend\" \"npm run dev-frontend\"",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "dotenv": "^17.3.1",
    "mariadb": "^3.4.5",
    "mysql2": "^3.17.1",
    "pg": "^8.18.0",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  }
}
